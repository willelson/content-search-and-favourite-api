# Postgres environment variables
PG_DB=my_db
PG_USER=my_user
PG_PASSWORD=my_pass
PG_HOST=my_host

# Enter the api key from your pixabay account here
# PIXABAY_API_KEY=<pixabay api key>

# Redis cache
CACHE_NAME=some-redis

# MinIO CDN
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=miniorootpass
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Hostname on the docker network for container communication
MINIO_HOST=minio-storage

# External hostname used to build cdn links
MINIO_CDN_HOST=localhost
CONTENT_BUCKET_NAME=cdn